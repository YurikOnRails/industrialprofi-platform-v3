<%= render 'account/shared/page' do |page| %>
  <% page.title t('.section') %>
  <% page.body do %>
    <%= cable_ready_updates_for @worker do %>
      <%= render 'account/shared/box', divider: true do |box| %>
        <% box.title t('.header') %>
        <% box.description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @worker %>
        <% end %>

        <% box.body do %>
          <% with_attribute_settings object: @worker, strategy: :label do %>
            <%= render 'shared/attributes/text', attribute: :last_name %>
            <%= render 'shared/attributes/text', attribute: :first_name %>
            <%= render 'shared/attributes/text', attribute: :middle_name %>
            <%= render 'shared/attributes/text', attribute: :employee_number %>
            <%= render 'shared/attributes/text', attribute: :department %>
            <%= render 'shared/attributes/text', attribute: :position %>
            <%= render 'shared/attributes/date', attribute: :hire_date %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% box.actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @worker], class: first_button_primary if can? :edit, @worker %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @worker], method: :delete, class: first_button_primary, data: { turbo_confirm: t('.buttons.confirmations.destroy', model_locales(@worker)) } if can? :destroy, @worker %>
          <%= link_to t('global.buttons.back'), [:account, @team, :workers], class: first_button_primary %>
        <% end %>

        <% box.raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%= render "account/certifications/index", certifications: @worker.certifications, hide_back: true %>
    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
