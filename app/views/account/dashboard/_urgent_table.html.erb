<% urgent_certifications ||= [] %>

<% if urgent_certifications.any? %>
<div class="mb-8">
  <h3 class="text-md font-semibold text-gray-900 mb-3">Требуют внимания</h3>
  
  <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Сотрудник</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Таб. №</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Допуск</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Истекает</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Статус</th>
          <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Штраф</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% urgent_certifications.each do |cert| %>
          <tr>
            <td class="px-4 py-2 text-sm text-gray-900">
              <%= link_to cert.worker.full_name, [:account, cert.worker], class: "text-blue-600 hover:underline" %>
            </td>
            <td class="px-4 py-2 text-sm text-gray-500">
              <%= cert.worker.employee_number %>
            </td>
            <td class="px-4 py-2 text-sm text-gray-900">
              <%= cert.permit_type.name %>
            </td>
            <td class="px-4 py-2 text-sm text-gray-500">
              <%= cert.expires_at&.strftime("%d.%m.%Y") || "—" %>
            </td>
            <td class="px-4 py-2 text-sm">
              <%= certification_status_badge(cert) %>
            </td>
            <td class="px-4 py-2 text-sm text-red-600 font-medium">
              <%= number_to_currency(cert.permit_type.penalty_amount || 0, unit: "₽", format: "%n %u", delimiter: " ", precision: 0) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>
