<% certifications = certifications.accessible_by(current_ability) %>
<% worker = @worker %>
<% context ||= worker %>
<% collection ||= :certifications %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% pagy ||= nil %>
<% pagy, certifications = pagy(certifications, page_param: :certifications_page) unless pagy %>

<%= action_model_select_controller do %>
  <% cable_ready_updates_for context, collection do %>
    <%= render 'account/shared/box', pagy: pagy do |box| %>
      <% box.title t(".contexts.#{context.class.name.underscore}.header") %>
      <% box.description do %>
        <%= t(".contexts.#{context.class.name.underscore}.description#{"_empty" unless certifications.any?}") %>
        <%= render "shared/limits/index", model: certifications.model %>
      <% end %>

      <% box.table do %>
        <% if certifications.any? %>
          <table class="table">
            <thead>
              <tr>
                <%= render "shared/tables/select_all" %>
                <th><%= t('.fields.permit_type.heading') %></th>
                <th><%= t('.fields.issued_at.heading') %></th>
                <th><%= t('.fields.expires_at.heading') %></th>
                <th>–°—Ç–∞—Ç—É—Å</th>
                <th><%= t('.fields.document_number.heading') %></th>
                <th><%= t('.fields.protocol_number.heading') %></th>
                <th><%= t('.fields.protocol_date.heading') %></th>
                <th><%= t('.fields.training_center.heading') %></th>
                <th><%= t('.fields.next_check_date.heading') %></th>
                <%# üöÖ super scaffolding will insert new field headers above this line. %>
                <th><%= t('.fields.created_at.heading') %></th>
                <th class="text-right"></th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: 'account/certifications/certification', collection: certifications %>
            </tbody>
          </table>
        <% end %>
      <% end %>

      <% box.actions do %>
        <% unless hide_actions %>
          <% if context == worker %>
            <% if can? :create, Certification.new(worker: worker) %>
              <%= link_to t('.buttons.new'), [:new, :account, worker, :certification], class: "#{first_button_primary(:certification)} new" %>
            <% end %>
          <% end %>

          <%# üöÖ super scaffolding will insert new targets one parent action model buttons above this line. %>
          <%# üöÖ super scaffolding will insert new bulk action model buttons above this line. %>
          <%= render "shared/bulk_action_select" if certifications.any? %>

          <% unless hide_back %>
            <%= link_to t('global.buttons.back'), [:account, context], class: "#{first_button_primary(:certification)} back" %>
          <% end %>
        <% end %>
      <% end %>

      <% box.raw_footer do %>
        <%# üöÖ super scaffolding will insert new action model index views above this line. %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
