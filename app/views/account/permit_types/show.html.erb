<%= render 'account/shared/page' do |page| %>
  <% page.title t('.section') %>
  <% page.body do %>
    <%= cable_ready_updates_for @permit_type do %>
      <%= render 'account/shared/box', divider: true do |box| %>
        <% box.title t('.header') %>
        <% box.description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @permit_type %>
        <% end %>

        <% box.body do %>
          <% with_attribute_settings object: @permit_type, strategy: :label do %>
            <%= render 'shared/attributes/text', attribute: :name %>
            <%= render 'shared/attributes/number', attribute: :validity_months %>
            <%= render 'shared/attributes/text', attribute: :national_standard %>
            <%= render 'shared/attributes/number', attribute: :penalty_amount %>
            <%= render 'shared/attributes/text', attribute: :penalty_article %>
            <%= render 'shared/attributes/number', attribute: :training_hours %>
            <%= render 'shared/attributes/option', attribute: :requires_protocol %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% box.actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @permit_type], class: first_button_primary if can? :edit, @permit_type %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @permit_type], method: :delete, class: first_button_primary, data: { turbo_confirm: t('.buttons.confirmations.destroy', model_locales(@permit_type)) } if can? :destroy, @permit_type %>
          <%= link_to t('global.buttons.back'), [:account, @team, :permit_types], class: first_button_primary %>
        <% end %>

        <% box.raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
