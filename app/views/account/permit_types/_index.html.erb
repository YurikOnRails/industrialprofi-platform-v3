<% permit_types = permit_types.accessible_by(current_ability) %>
<% team = @team %>
<% context ||= team %>
<% collection ||= :permit_types %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% pagy ||= nil %>
<% pagy, permit_types = pagy(permit_types, page_param: :permit_types_page) unless pagy %>

<%= action_model_select_controller do %>
  <% cable_ready_updates_for context, collection do %>
    <%= render 'account/shared/box', pagy: pagy do |box| %>
      <% box.title t(".contexts.#{context.class.name.underscore}.header") %>
      <% box.description do %>
        <%= t(".contexts.#{context.class.name.underscore}.description#{"_empty" unless permit_types.any?}") %>
        <%= render "shared/limits/index", model: permit_types.model %>
      <% end %>

      <% box.table do %>
        <% if permit_types.any? %>
          <table class="table">
            <thead>
              <tr>
                <%= render "shared/tables/select_all" %>
                <th><%= t('.fields.name.heading') %></th>
                <th><%= t('.fields.validity_months.heading') %></th>
                <th><%= t('.fields.national_standard.heading') %></th>
                <th><%= t('.fields.penalty_amount.heading') %></th>
                <th><%= t('.fields.penalty_article.heading') %></th>
                <th><%= t('.fields.training_hours.heading') %></th>
                <th  class="text-center"><%= t('.fields.requires_protocol.heading') %></th>
                <%# ðŸš… super scaffolding will insert new field headers above this line. %>
                <th><%= t('.fields.created_at.heading') %></th>
                <th class="text-right"></th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: 'account/permit_types/permit_type', collection: permit_types %>
            </tbody>
          </table>
        <% end %>
      <% end %>

      <% box.actions do %>
        <% unless hide_actions %>
          <% if context == team %>
            <% if can? :create, PermitType.new(team: team) %>
              <%= link_to t('.buttons.new'), [:new, :account, team, :permit_type], class: "#{first_button_primary(:permit_type)} new" %>
            <% end %>
          <% end %>

          <%# ðŸš… super scaffolding will insert new targets one parent action model buttons above this line. %>
          <%# ðŸš… super scaffolding will insert new bulk action model buttons above this line. %>
          <%= render "shared/bulk_action_select" if permit_types.any? %>

          <% unless hide_back %>
            <%= link_to t('global.buttons.back'), [:account, context], class: "#{first_button_primary(:permit_type)} back" %>
          <% end %>
        <% end %>
      <% end %>

      <% box.raw_footer do %>
        <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
