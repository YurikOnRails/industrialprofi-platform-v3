<% cancel_path ||= permit_type.persisted? ? [:account, permit_type] : [:account, @team, :permit_types] %>

<%= form_with model: permit_type, url: (permit_type.persisted? ? [:account, permit_type] : [:account, @team, :permit_types]), class: 'form' do |form| %>
  <%= render "shared/limits/form", form: form, cancel_path: cancel_path do %>
    <%= render 'account/shared/forms/errors', form: form %>

    <% with_field_settings form: form do %>
      <%= render 'shared/fields/text_field', method: :name, options: {autofocus: true} %>
      <%= render 'shared/fields/number_field', method: :validity_months %>
      <%= render 'shared/fields/text_field', method: :national_standard %>
      <%= render 'shared/fields/number_field', method: :penalty_amount %>
      <%= render 'shared/fields/text_field', method: :penalty_article %>
      <%= render 'shared/fields/number_field', method: :training_hours %>
      <%= render 'shared/fields/options', method: :requires_protocol %>
      <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <% end %>

    <div class="buttons">
      <%= form.submit (form.object.persisted? ? t('.buttons.update') : t('.buttons.create')), class: "button" %>
      <%= link_to t('global.buttons.cancel'), cancel_path, class: "button-secondary" %>
    </div>
  <% end %>
<% end %>
